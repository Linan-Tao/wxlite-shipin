/* block */
.block {
  display: block;
  background-color: #fff;
}
.block .block-head {
  display: block;
  padding: 20rpx;
  font-size: 35rpx;
  color: #565c67;
}
.block .block-content {
  border-top: 1rpx solid silver;
  border-bottom: 1rpx solid silver;
  display: block;
  min-height: 300rpx;
  padding: 40rpx 20rpx;
}
.block .block-content .content-item {
  font-size: 30rpx;
}
.block .block-content .content-item:nth-child(1) {
  color: #9e9e9e;
}
.block .block-content .tags .tag-item {
  background-color: #f2f4f8;
  padding: 5rpx 10rpx;
  color: rgb(105, 103, 103);
  font-size: 20rpx;
}
.block .block-content .tags .tag-item:nth-child(1) {
  margin-left: 0rpx !important;
}
.block .block-foot {
  display: block;
  min-height: 100rpx;
}

/* text-overflow */
.text-overflow {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

/* float */
.float-left {
  float: left;
}
.float-right {
  float: right;
}
.clearfix,.clearfix::after {
  clear: both;
}

